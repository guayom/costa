<% if @imagen.persisted? %>
  $('#uploads_container').append($('<img>', {
    src: '<%= params[:url] %>',
    style: 'width: 500px;'
  }));

//  $('#upload_<%= params[:unique_id] %>').hide();
<% else %>
  $('#upload_<%= params[:unique_id] %> div.progress')
    .removeClass('active progress-striped')
    .addClass('progress-danger');
<% end %>
