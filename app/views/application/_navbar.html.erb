<style>
  @media only screen and (min-width : 768px) {
    .navbar-default .navbar-nav > li > a {
      padding-top: 60px;
      padding-bottom: 60px;
    }
    .navbar-brand img {
      height: 140px;
    }

    .separator {
      margin-top: 80px;
    }
  }


  @media only screen and (max-width: 1199px) {
    .navbar-brand img {
      height: 130px;
    }
  }
</style>
<script>
  $(window).on('scroll resize',function() {
    if ($(window).width() >= 992) {
      $('.navbar').addClass('navbar-fixed-top');

      var scrollSize = Math.round($(window).scrollTop());
//      console.log(scrollSize);
      if (scrollSize > 37) {
        $('.navbar-fixed-top').css({
          marginTop: 0
        });
      } else {
        $('.navbar-fixed-top').css({
          marginTop: 37 - scrollSize
        });
      }

      if (scrollSize > 60) {
        $('.navbar-default .navbar-nav > li > a').css({
          paddingTop: '30px',
          paddingBottom: '30px'
        });
//      $('.navbar-brand img').css({
//        height: '80px !important'
//      });
        $('.navbar-brand img').height(80);
        $('.separator').css({marginTop: '80px'});
      } else {
        $('.navbar-default .navbar-nav > li > a').css({
          paddingTop: (60 - scrollSize / 2) + 'px',
          paddingBottom: (60 - scrollSize / 2) + 'px'
        });
//      $('.navbar-brand img').css({
//        height: (140 - scrollSize / 2) + 'px !important'
//      });
        $('.navbar-brand img').height(120 - scrollSize / 2);
        $('.separator').css({marginTop: (120 - scrollSize / 2) + 'px'});
      }
    } else {
      $('.navbar').removeClass('navbar-fixed-top');
      $('.navbar-brand img').height(55);
      $('.navbar-default .navbar-nav > li > a').css({
        paddingTop: '20px',
        paddingBottom: '20px'
      });
      $('.separator').css({marginTop: '0'});
      $('.navbar').css({marginTop: 0, marginBottom: 0});
      $('.header-slide').css({marginTop: 0});

//      var scrollSize = Math.round($(window).scrollTop());
//      if (scrollSize > 37) {
//        $('.navbar-fixed-top').css({
//          marginTop: 0
//        });
//      } else {
//        $('.navbar-fixed-top').css({
//          marginTop: 0
//        });
//      }
    }
  });

  $(function() {
    $(window).trigger('scroll');
  });
</script>

<div class="contact-header">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 header-phones">
        <strong class="hidden-xs">Tel√©fonos: </strong>
        <% CONTACT_INFO['telefonos'].each_with_index do |tel, index| %>
          <a href="tel:<%= tel['numero'] %>" style="white-space: nowrap;"><%= tel['numero'] %></a>
          <% unless index == CONTACT_INFO['telefonos'].size - 1 %>
            /
          <% end %>
        <% end %>
      </div>
      <div class="col-sm-4 text-right hidden-xs">
        <strong>Seguinos en: </strong>
        <% CONTACT_INFO['redes_sociales'].each do |link| %>
          <a href="<%= link['url'] %>" class="icon-<%= link['nombre'] %>" rel="tooltip" title="" data-placement="bottom" data-original-title="<%= link['nombre'].titleize %>" target="_blank">
            <i class="fa fa-<%= link['icon'] %>-official"></i>
          </a>
        <% end %>
      </div>
    </div>
  </div>
</div>

