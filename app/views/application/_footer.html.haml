/ begin:footer
#footer
  .container
    .row
      .col-md-5.col-sm-6.col-xs-12
        .widget.tipos
          %h3 Propiedades
          %ul.list-unstyled
            - Tipo.all.find_all { |t| t.propiedades.publicado.any? }.each do |tipo|
              %li
                = link_to propiedades_path(listado: :venta, tipo: tipo.titulo) do
                  = tipo.titulo
      / break
      .col-md-4.col-sm-6.col-xs-12
        .widget
          %h3 Nuestros Agentes
          %ul.list-unstyled
            - @agentes = Admin.without_permisos(:developer)
            - @agentes = @agentes.move(@agentes.last, 1)
            = @agentes.inspect
            - Admin.without_permisos(:developer).each do |admin|
              %li
                = admin.nombre
                %br
                = admin.telefono

      / break
      .col-md-3.col-sm-6.col-xs-12
        .widget
          %h2 Costa 506 Real Estate
          %address
            %strong= CONTACT_INFO['direccion']
            %br
              Email : #{CONTACT_INFO['email']}
              %br/
              %br/
              %strong TelÃ©fonos:
              %br/
              - CONTACT_INFO['telefonos'].each do |member|
                %div
                  %abbr{:title => "Phone"}
                  = member['numero']
      / break
    / break
    / begin:copyright
    .row
      .col-md-12.copyright
        %ul.list-inline.social-links
          - CONTACT_INFO['redes_sociales'].each do |link|
            %li
              %a{:class => "icon-#{link['nombre']}", "data-original-title" => link['nombre'].titleize, "data-placement" => "bottom", :href => link['url'], :rel => "tooltip", :title => ""}
                %i{:class => "fa fa-#{link['icon']}"}
        %p Copyright &copy; 2015 Costa 506 Real Estate. Todos los derechos reservados.
        %p
          Powered by
          %strong
            %a{:href => "http://tigerkissdesign.com", :target => "_blank"} TigerKiss Design.
        %a.btn.btn-success.scroltop{:href => "#top"}
          %i.fa.fa-angle-up
    / end:copyright
/ end:footer
