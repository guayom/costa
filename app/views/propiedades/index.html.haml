- content_for :full_width_header do
  #header.heading{:style => "background-image: url('#{image_path('img01.jpg')}'); background-position: 50% 0px;"}
    .container
      .row
        .col-md-10.col-md-offset-1.col-sm-12
          .page-title
            %h2
              Nuestras Propiedades
              %span
              %p
- content_for :content do
  #content
    .container
      .row
        .col-md-8.col-md-push-4
          .row.container-realestate
            = will_paginate @propiedades
            = render partial: "propiedades/horizontal", collection: @propiedades, as: :propiedad
            = will_paginate @propiedades
        .col-md-4.col-md-pull-8.sidebar
          = render :partial => 'application/filters_sidebar'

