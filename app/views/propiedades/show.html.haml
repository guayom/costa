#content
	.container
		/ begin:article
		.col-md-9
			.row
				.col-md-12.single-post
					%ul#myTab.nav.nav-tabs.nav-justified
						%li.active
							%a{"data-toggle" => "tab", :href => "#detail"}
								%i.fa.fa-university
								General
						%li
							%a{"data-toggle" => "tab", :href => "#location"}
								%i.fa.fa-plus
								Solicitar Información
					#myTabContent.tab-content
						#detail.tab-pane.fade.in.active
							.row
								.col-md-12
									%h2
										= @propiedad.titular
										%br/
										%small
											Código: #{@propiedad.codigo}
									#slider-property.carousel.slide{"data-ride" => "carousel"}
										.carousel-inner
											- unless @propiedad.imagenes.empty?
												- @propiedad.imagenes.each_with_index do |pic, index|
													%div{:class => "item #{'active' if index == 0}"}
														= image_tag pic.imagen.url
										%a.left.carousel-control{"data-slide" => "prev", :href => "#slider-property"}
											%span.glyphicon.glyphicon-chevron-left
										%a.right.carousel-control{"data-slide" => "next", :href => "#slider-property"}
											%span.glyphicon.glyphicon-chevron-right
									.row
										.col-xs-12
											%ol.carousel-indicators
												- unless @propiedad.imagenes.empty?
													- @propiedad.imagenes.each_with_index do |pic, index|
														%li{"data-slide-to" => index, "data-target" => "#slider-property"}
															= image_tag pic.imagen.url, :class => "img-responsive"
									%h3 General
									.row
										.col-xs-8
											%table.table.table-bordered
												%tr
													%td{:width => "20%"}
														%strong Código
													%td= @propiedad.codigo
												- unless @propiedad.valor_compra.to_i < 0
													%tr
														%td
															%strong Venta
														%td
															$#{number_with_delimiter(@propiedad.valor_compra)}
															\#{'Opción de compra' if @propiedad.opcion_compra == true}
												- unless @propiedad.valor_alquiler.to_i < 0
													%tr
														%td
															%strong Alquiler
														%td
															$#{number_with_delimiter(@propiedad.valor_alquiler)}
												%tr
													%td
														%strong Ubicación
													%td
														= @propiedad.ubicacion
												%td
													%strong Área
												%td
													Construcción: #{number_to_human(@propiedad.area_construccion, precision: 1, strip_insignificant_zeros: true)}m
													%sup 2
													%br/
													Terreno: #{number_to_human(@propiedad.area_terreno, precision: 1, strip_insignificant_zeros: true)}m
													%sup 2
												- unless @propiedad.patio == false
													%tr
														%td
															%strong Patio
														%td
															= @propiedad.patio_area
															m
															%sup 2
												%tr
													%td
														%strong Agente
													%td
														= "#{@propiedad.admin.nombre}"
														%br/
														= @propiedad.admin.email
										.col-xs-4
											.post-meta.description-icons
												%i.fa.fa-bed
												= pluralize(@propiedad.dormitorios, 'Dormitorio')
												%br/
												%i.fa.fa-male
												= pluralize(number_to_human(@propiedad.banos, precision: 1, strip_insignificant_zeros: true), 'Baño')
												%br/
												%i.fa.fa-building-o
												= pluralize(@propiedad.pisos, 'Piso')
												%br/
												%i.fa.fa-car
												= @propiedad.tipo_de_estacionamiento
												para #{pluralize(@propiedad.estacionamiento, 'Carro')}
												%br/
									.row
										.col-md-4.col-sm-4
											%h3 Características
											%ul
												
									%h3 Descripción:
									%p= @propiedad.descripcion_publica
									%p= @propiedad.estado
						/ break
						#location.tab-pane.fade
							/
								<div class="row">
								<div class="col-md-12">
								<div id="map-property"></div>
								</div>
								</div>
							.row
								.col-md-6.col-sm-6
									%h3 ¿Le interesa esta propiedad?
									%p Póngase en contacto con nosotros por medio de nuestro formulario o contacte a nuestro agente directamente.
									.team-container.team-dark
										/
											<div class="team-image">
											<img src="img/team01.jpg" alt="the team - mikha realestate theme">
											</div>
										.team-description
											%small Agente:
											%h3
												= @propiedad.admin.nombre
											%p
												%i.fa.fa-envelope
												= @propiedad.admin.email
												/
													<i class="fa fa-phone"></i> Office : 021-234-5678<br>
													<i class="fa fa-mobile"></i> Mobile : +62-3456-78910<br>
													<i class="fa fa-print"></i> Fax : 021-234-5679
											/
												<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
												tempor incididunt ut labore et dolore magna aliqua.</p>
												<div class="team-social">
												<span><a href="#" title="Twitter" rel="tooltip" data-placement="top"><i class="fa fa-twitter"></i></a></span>
												<span><a href="#" title="Facebook" rel="tooltip" data-placement="top"><i class="fa fa-facebook"></i></a></span>
												<span><a href="#" title="Google Plus" rel="tooltip" data-placement="top"><i class="fa fa-google-plus"></i></a></span>
												<span><a href="#" title="Email" rel="tooltip" data-placement="top"><i class="fa fa-envelope"></i></a></span>
												<span><a href="#" title="LinkedIn" rel="tooltip" data-placement="top"><i class="fa fa-linkedin"></i></a></span>
												</div>
								.col-md-6.col-sm-6
									%br/
									%form
										.form-group
											%label{:for => "nombre"} Nombre
											%input#nombre.form-control.input-lg{:name => "nombre", :placeholder => "", :type => "text"}
										.form-group
											%label{:for => "email"} Email
											%input#email.form-control.input-lg{:name => "email", :placeholder => "", :type => "email"}
										.form-group
											%label{:for => "telefono"} Teléfono
											%input#telefono.form-control.input-lg{:name => "telefono", :placeholder => "Ej: 2222 2222", :type => "text"}
										.form-group
											%label{:for => "comentarios"} Comentarios
											%textarea#comentarios.form-control.input-lg{:name => "comentarios", :placeholder => "", :rows => "7"}
										%input{:name => "propiedad", :type => "hidden", :value => @propiedad.codigo}/
										%input{:name => "link", :type => "hidden", :value => request.original_url}/
										.form-group
											%input.btn.btn-success.btn-lg{:name => "submit", :type => "submit", :value => "Enviar"}
		/ end:article
		.col-md-3.pull-left
		-#= render('application/sidebar')