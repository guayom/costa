.col-xs-12{:style => "position: absolute; left: 0px; top: 0px;"}
  .property-container
    .property-content-list
      .row
        .col-xs-12.col-md-6
          .property-image-list
            - if propiedad.imagenes.any?
              %img{:alt => "#{propiedad.titular}", :src => propiedad.imagenes.first.imagen.url }
                .property-price
                  %h4
                    = propiedad.tipo.titulo unless propiedad.tipo.nil?
                  = propiedad_all_prices(propiedad)
                .mycarousel
                  %ul.mensajes-especiales
                    - propiedad.mensajes.each do |mensaje|
                      %li{:data => {:color => mensaje.color }}
                        = mensaje.mensaje
            -#.property-status
              -#%span= propiedad.tipo.titulo if propiedad.tipo
            .property-features
              - unless propiedad.area_construccion.nil? || propiedad.area_construccion == 0
                %span
                  %i.fa.fa-home
                  #{propiedad.area_construccion} m
                  %sup 2
              - unless propiedad.dormitorios.nil? || propiedad.dormitorios == 0
                %span
                  %i.fa.fa-hdd-o
                  #{propiedad.dormitorios} Dormitorios
              - unless propiedad.banos.nil? || propiedad.banos == 0
                %span
                  %i.fa.fa-male
                  #{propiedad.banos.round} Baños
              - unless propiedad.pisos.nil? || propiedad.pisos == 0
                %span
                  %i.fa.fa-building-o
                  #{propiedad.pisos} Pisos
              - unless propiedad.estacionamiento.nil? || propiedad.estacionamiento == 0
                %span
                  %i.fa.fa-car
                  #{propiedad.estacionamiento}
                  - if propiedad.tipo_de_estacionamiento.nil?
                    Estacionamiento
                  - else
                    #{propiedad.tipo_de_estacionamiento}
        .property-text.col-xs-12.col-md-6
          %h3
            = link_to propiedad.titular, propiedad
            %small
          %p= truncate( strip_tags(propiedad.descripcion_publica), length: 150, :separator => ' ').gsub("↵", '')
          %p= link_to "Más detalles »", propiedad, class: 'btn btn-success'
