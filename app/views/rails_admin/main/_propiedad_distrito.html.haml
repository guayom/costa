= select :propiedad, :distrito,
             options_for_select([['Buscar', nil]] + Distrito.all.map { |d| [d.nombre, d.nombre, { 'data-provincia-name': d.provincia.nombre, 'data-canton-name': d.canton.nombre }]}, field.form_value)

= select_tag :distrito_copy,
             options_for_select([['Buscar', nil]] + Distrito.all.map { |d| [d.nombre, d.nombre, { 'data-provincia-name': d.provincia.nombre, 'data-canton-name': d.canton.nombre }]}),
             style: 'display: none;'
