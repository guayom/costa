!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => "IE=Edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "vdLMMOZytK8_f9EqtFuyZgvUkvGjqWbllc_GTuw_LGM", :name => "google-site-verification"}/
    = favicon_link_tag

    %title
      = yield :title
      = content_for?(:title) ? " | ":""
      Costa506 Real Estate

    - if Rails.env.production?
      %script{type: "text/javascript"}
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-88030533-1', 'auto');

    = yield :meta_tags

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

%body#top
  = render 'application/fbsdk'
  = render 'application/navbar'
  = yield :full_width_header

  - if notice.present?
    .alert.alert-info.alert-dismissible
      %button.close{ data: { dismiss: 'alert' } }
        &times;

      = notice

  - if alert.present?
    .alert.alert-danger.alert-dismissible
      %button.close{ data: { dismiss: 'alert' } }
        &times;

      = alert

  = content_for?(:content) ? yield(:content) : yield
  = render "application/footer"
